@inherits LayoutComponentBase
@inject IJSRuntime _jsRuntime
@using Blazored.Toast
@using Blazored.Toast.Configuration 

<!-- Preloader Start -->
<div id="preloader-wapper">
    <div class="loader-middle"></div>
</div>
<!-- Prealoader End -->
@Body

<Footer />
<BlazoredToasts SuccessIcon="fa fa-thumbs-up" ErrorIcon="fa fa-bug" Position="ToastPosition.BottomRight"
                Timeout="4"
                IconType="IconType.FontAwesome"
                ShowProgressBar="@false" />
<!-- Back to Top -->
<a href="#" class="back-to-top back-to-top-pulse"><i class="fa fa-caret-up"></i></a>

@code {
    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        _jsRuntime.InvokeVoidAsync("particles");
        _jsRuntime.InvokeVoidAsync("particles_app");
        _jsRuntime.InvokeVoidAsync("mainjs");
        _jsRuntime.InvokeVoidAsync("scroll_js");
        return base.OnAfterRenderAsync(firstRender);
    }
}


